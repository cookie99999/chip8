public class CPU {
    private byte memory[4096];
    
    private short pc;
    private short ir;
    private byte delay_timer;
    private byte sound_timer;
    private byte registers[16];

    public void step() {
	short opcode = (this.memory[this.pc] <<< 8) | (this.memory[this.pc + 1]); //<<< = unsigned shift

	byte op = ((opcode & 0xf000) >>> 12);
	byte x = ((opcode & 0x0f00) >>> 8);
	byte y = ((opcode & 0x00f0) >>> 4);
	byte n = (opcode & 0x000f);
	byte nn = (opcode & 0x00ff);
	short nnn = (opcode & 0x0fff);
	
